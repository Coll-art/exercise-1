
/* ~~~~~~~~~~~ Exercise 1: /* ~~~~~~~~~~~ Exercise 1: conditional statements/branching ~~~~~~~~~~~ */

Console.WriteLine("give me a number");
string num = Console.ReadLine();
int number = int.Parse(num);


if (number > 0)
{
    Console.WriteLine($"number: The {number} is positive.");
}

else if (number < 0)
{
    Console.WriteLine($"number: The {number} is Negative.");
}

else if (number == 0)
{
    Console.WriteLine($"number: The {number} is niether positive or negative, it is zero.");
}


Console.WriteLine("give me two numbers.");
string num1 = Console.ReadLine();
string num2 = Console.ReadLine();
int number1 = int.Parse(num1);
int number2 = int.Parse(num2);

if (number1 > number2)
{
    Console.WriteLine("number 1 is greater");
}
else if (number1 < number2)
{
    Console.WriteLine("number 2 is greater ");
}
else if (number1 == number2)
{
    Console.WriteLine("The numbers are the same");
}


Console.WriteLine("what is your grade?(0-100)");
string grade = Console.ReadLine();
int letterGrade = int.Parse(grade);

if (letterGrade >= 90)
{
    Console.WriteLine($"A score of {grade} represents a letter grade of A");
}
else if (letterGrade < 90 && letterGrade >= 80)
{
    Console.WriteLine($"A score of {grade} represents a letter grade of B");
}
else if (letterGrade >= 70 && letterGrade < 80)
{
    Console.WriteLine($"A score of {grade} represents a letter grade of C");
}
else if (letterGrade >= 60 && letterGrade < 70)
{
    Console.WriteLine($"A score of {grade} represents a letter grade of D");
}
else if (letterGrade <= 59)
{
    Console.WriteLine($"A score of {grade} represents a letter grade of F");
}


Console.WriteLine("give me a number between 1 and 7");
string day = Console.ReadLine();
int dayNum = int.Parse(day);

if (dayNum == 1)
{
    Console.WriteLine("Today is Sunday!");
}
else if (dayNum == 2)
{
    Console.WriteLine("Today is Monday. Good Luck.");
}
else if (dayNum == 3)
{
    Console.WriteLine("Today is Tuesday.");
}
else if (dayNum == 4)
{
    Console.WriteLine("Today is Wednesday.");
}
else if (dayNum == 5)
{
    Console.WriteLine("Today is Thursday.");
}
else if (dayNum == 6)
{
    Console.WriteLine("Today is Friday.");
}
else if (dayNum == 7)
{
    Console.WriteLine("Today is Saturday. Finally!");
}



