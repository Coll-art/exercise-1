//~~~~~~~~~~~ Number Guessing Game ~~~~~~~~~~~ */
using Microsoft.VisualBasic;

Random rand = new Random();
int randomNumber = rand.Next(20) + 1;

/*Delete for final product */Console.WriteLine(randomNumber);

